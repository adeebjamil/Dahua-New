---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Telecommunication Infrastructure">
  <!-- Hero Section -->
  <section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://source.unsplash.com/1600x900/?telecommunication,network" 
        alt="Telecommunication Infrastructure" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-900/80 to-black/50"></div>
    </div>
    
    <div class="relative container mx-auto px-4 text-center text-white">
      <h1 class="text-5xl md:text-6xl font-bold mb-4 animate-fade-in">
        Telecommunication Infrastructure
      </h1>
      <p class="text-xl md:text-2xl mb-8 animate-fade-in-delay">
        Connecting the world through secure networks
      </p>
      <a 
        href="#solutions"
        class="inline-block px-8 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-full transition-all duration-300"
      >
        Discover Solutions
      </a>
    </div>
  </section>

  <!-- Solutions Grid Section -->
  <section id="solutions" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h2 class="text-4xl font-bold mb-6">Network Solutions</h2>
        <p class="text-lg text-gray-700">
          Comprehensive telecommunication infrastructure solutions for modern connectivity needs.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {[
          {
            title: "5G Infrastructure",
            description: "Next-generation mobile network infrastructure for ultra-fast connectivity",
            image: "https://source.unsplash.com/featured/?5g,network"
          },
          {
            title: "Fiber Optics",
            description: "High-speed fiber optic networks for reliable data transmission",
            image: "https://source.unsplash.com/featured/?fiber,optic"
          },
          {
            title: "Data Centers",
            description: "Secure and efficient data center solutions for telecommunications",
            image: "https://source.unsplash.com/featured/?datacenter"
          }
        ].map(item => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition-shadow duration-300">
            <div class="relative h-48">
              <img 
                src={item.image} 
                alt={item.title}
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
              <h3 class="absolute bottom-4 left-4 text-white text-xl font-bold">{item.title}</h3>
            </div>
            <div class="p-6">
              <p class="text-gray-600">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
        <div class="space-y-6">
          <h2 class="text-4xl font-bold mb-6">Security Features</h2>
          <ul class="space-y-4">
            {[
              "Network monitoring and threat detection",
              "Advanced encryption protocols",
              "Physical infrastructure protection",
              "24/7 security operations center"
            ].map(feature => (
              <li class="flex items-center space-x-3">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="relative">
          <img
            src="https://source.unsplash.com/featured/?security,network"
            alt="Network Security"
            class="rounded-lg shadow-xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="py-20 bg-indigo-900 text-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        {[
          { value: "99.99%", label: "Network Uptime" },
          { value: "24/7", label: "Monitoring" },
          { value: "Global", label: "Coverage" }
        ].map(stat => (
          <div class="p-6">
            <div class="text-4xl font-bold mb-2">{stat.value}</div>
            <div class="text-indigo-200">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gradient-to-r from-indigo-600 to-indigo-800">
    <div class="container mx-auto px-4 text-center text-white">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Ready to Secure Your Network?</h2>
      <p class="text-lg mb-8">
        Let's build a resilient telecommunication infrastructure together
      </p>
      <a 
        href="/contact" 
        class="inline-block px-8 py-3 bg-white text-indigo-600 rounded-full hover:bg-indigo-50 transition-all duration-300"
      >
        Get Started
      </a>
    </div>
  </section>

  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-fade-in {
      animation: fadeIn 1s ease-out both;
    }
    
    .animate-fade-in-delay {
      animation: fadeIn 1s ease-out 0.3s both;
    }
  </style>
</Layout>