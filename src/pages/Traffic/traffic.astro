---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Traffic Management">
  <section class="min-h-screen flex items-center justify-center bg-gray-50 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Card Container -->
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <!-- Image Section -->
          <div class="relative h-[400px]">
            <img 
              src="https://source.unsplash.com/1600x900/?traffic,management" 
              alt="Traffic Management Systems" 
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
          </div>

          <!-- Content Section -->
          <div class="p-8 text-center">
            <h1 class="text-4xl font-bold text-gray-800 mb-6">
              Traffic Management
            </h1>
            <p class="text-gray-600 text-lg leading-relaxed mb-8">
              The solution of Traffic Management is proven to reduce traffic violations and save lives, help traffic authorities to relief traffic load with reliable system design.
            </p>
            <a 
              href="/Traffic/traffic-details" 
              class="inline-block px-8 py-3 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-all duration-300 transform hover:scale-105"
            >
              Learn More
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  section {
    animation: fadeIn 1s ease-out;
  }
</style>