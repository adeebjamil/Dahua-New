---
import Layout from '../layouts/Layout.astro';

const products = [
  {
    title: "Project Exclusive",
    description: "Comprehensive security solutions tailored for your specific needs",
    image: "/images/project-exclusive.webp",
    link: "/project-exclusive"
  },
  {
    title: "Recorder Server",
    description: "High-performance recording solutions with advanced features",
    image: "/images/recorder-server.webp",
    link: "/recorder-server"
  }
  // Add more products as needed
];
---

<Layout title="Products - Security Solutions">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[400px] flex items-center mt-10">
      <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-gray-800">
        <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-20"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <!-- Text content removed -->
      </div>
    </section>

    <!-- Products Grid -->
    <section class="container mx-auto px-4 py-16">
      <h2 class="text-3xl font-bold text-gray-800 mb-12">Our Solutions</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map(product => (
          <div class="group bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-2xl">
            <div class="aspect-video overflow-hidden">
              <img 
                src={product.image} 
                alt={product.title}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-800 mb-3">
                {product.title}
              </h3>
              <p class="text-gray-600 mb-4">
                {product.description}
              </p>
             
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Features Section -->
    <section class="bg-gray-50 py-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center p-6">
            <div class="text-blue-600 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.288 15.038a5.25 5.25 0 0 1 7.424 0M5.106 11.856c3.807-3.808 9.98-3.808 13.788 0M1.924 8.674c5.565-5.565 14.587-5.565 20.152 0M12.53 18.22l-.53.53-.53-.53a.75.75 0 0 1 1.06 0Z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Innovative Technology</h3>
            <p class="text-gray-600">Cutting-edge solutions for modern security needs</p>
          </div>
          
          <div class="text-center p-6">
            <div class="text-blue-600 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 12 2.25c-2.786 0-5.433.992-7.5 2.75-.837.71-1.5 1.587-1.5 2.75a.75.75 0 0 1 1.5 0c0 .664.367 1.337.983 1.87 1.823 1.574 4.838 1.574 6.662 0 .616-.533.983-1.206.983-1.87a.75.75 0 0 1 1.5 0c0 1.163-.663 2.04-1.5 2.75A11.959 11.959 0 0 1 12 12c-2.786 0-5.433-.992-7.5-2.75m15 0c-1.823-1.574-4.838-1.574-6.662 0-.616.533-.983 1.206-.983 1.87 0 .664.367 1.337.983 1.87 1.823 1.574 4.838 1.574 6.662 0C21.633 12.453 22 11.78 22 11.116c0-.664-.367-1.337-.983-1.87-.247-.212-.518-.403-.808-.571" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">Reliable Quality</h3>
            <p class="text-gray-600">Trusted performance and durability</p>
          </div>
          
          <div class="text-center p-6">
            <div class="text-blue-600 mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043A3.745 3.745 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 0 1-3.296-1.043 3.745 3.745 0 0 1-1.043-3.296A3.745 3.745 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 0 1 1.043-3.296 3.746 3.746 0 0 1 3.296-1.043A3.746 3.746 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.296A3.745 3.745 0 0 1 21 12Z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-2">End-to-End Service</h3>
            <p class="text-gray-600">Complete support from installation to maintenance</p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Add any custom styles here */
  .container {
    max-width: 1280px;
  }
</style>
