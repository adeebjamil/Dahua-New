                <a href="/thermal-cameras/thermography-series">
                    <button class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">Learn More</button>
                </a>
            </div>

            <div class="bg-gray-50 p-6 rounded">
                <h3 class="text-xl font-semibold">Outdoor Series</h3>
                <img src="/src/assets/thermal/outdoor-series.png" alt="Outdoor Series Camera" class="my-4 w-full h-48 object-contain">
                <a href="/thermal-cameras/outdoor-series">
                    <button class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">Learn More</button>
                </a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .header-banner {
        position: relative;
        height: 500px;
        overflow: hidden;
    }

    .header-banner img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .banner-content {
        position: absolute;
        top: 50%;
        left: 50px;
        transform: translateY(-50%);
    }
</style>
